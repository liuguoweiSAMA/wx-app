}  

  
.citybody {  
  position: fixed;  
  background: white;
  bottom: 0px;  
  z-index: 99999;
}  
  
.cityheader {  
  position: absolute;  
  top:0px;  
  width: 100%;  
  z-index: 5;  
}  
  
.city-cancel {  
